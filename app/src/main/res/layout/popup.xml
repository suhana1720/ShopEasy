<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_id"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="298dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="327dp"
            android:background="@color/cyan"
            android:padding="24dp">

            <TextView
                android:id="@+id/title"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enter_item"
                android:textSize="18sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/grocery_item"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:hint="@string/hint_item" />

            <EditText
                android:id="@+id/enter_quantity"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/grocery_item"
                android:inputType="number"
                android:padding="8dp"
                android:hint="@string/quantity" />

            <EditText
                android:id="@+id/enter_price"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/enter_quantity"
                android:inputType="number"
                android:padding="8dp"
                android:hint="Enter Price" />

            <EditText
                android:id="@+id/enter_brandname"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/enter_price"
                android:inputType="textPersonName"
                android:padding="8dp"
                android:hint="Enter brand" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/enter_brandname"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="5dp"
                android:background="@color/colorAccent"
                android:text="@string/save_button"
                android:onClick="saved"
                android:textColor="@color/grey"
                android:textSize="14sp"
                android:textStyle="bold" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>