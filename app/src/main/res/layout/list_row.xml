<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:background="@color/Carn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/jelly"
            android:layout_height="match_parent"
            android:padding="15dp">
            <TextView
                android:id="@+id/item"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="18sp"/>

                <TextView
                    android:id="@+id/enterquantity"
                    android:layout_width="wrap_content"
                    android:textStyle="italic"
                    android:paddingTop="4dp"
                    android:layout_below="@+id/item"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textSize="18sp"/>
            <TextView
                android:id="@+id/enter_Brand"
                android:layout_below="@+id/enterquantity"
                android:layout_width="wrap_content"
                android:textStyle="italic"
                android:paddingTop="4dp"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/enter_price"
                android:layout_below="@+id/enter_Brand"
                android:layout_width="wrap_content"
                android:textStyle="italic"
                android:paddingTop="4dp"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/itemdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textStyle="italic"
                android:textSize="18sp"
                android:layout_below="@+id/enter_price"/>
            <TableRow
                android:layout_alignParentEnd="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_alignBottom="@id/itemdate">

                <Button
                    android:id="@+id/editButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="15dp"
                    android:background="@android:drawable/ic_menu_edit"/>
                <Button
                    android:id="@+id/deleteButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="15dp"
                    android:background="@android:drawable/ic_delete"/>
            </TableRow>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>